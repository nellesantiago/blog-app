<div class="entries">
  <header>
    <nav>
      <div class="title">
        <i class="fa-solid fa-feather-pointed"></i>
        Dear<span>Diary</span>
      </div>
      <ul>
        <li><i class="fa-solid fa-user-tie"></i>
          <%= current_user.email %>
        </li>
        <li><%= link_to destroy_user_session_path, method: :delete, class: "log-out" do %>
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
          <% end %></li>
      </ul>
    </nav>
  </header>
  <main>
    <div class="container">
      <div class="title">Entries</div>
      <div class="entry">
        <% @entries.each do |entry| %>
          <%= link_to entry, class: "list" do %>
            <div class="title"><%= entry.title %></div>
            <div class="created-at">
              <i class="fa-solid fa-marker"></i>
              <%= entry.created_at.strftime("%b %m, %Y") %>
            </div>
            <div class="options">
              <%= link_to edit_entry_path(entry) do %>
              <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= link_to entry, method: :delete, data: {confirm: "Are you sure?"} do %>
              <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to '+', new_entry_path, class: "list" %>
  </div>
</main>
</div>
