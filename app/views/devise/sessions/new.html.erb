<div class="sign-in">
  <header>
    <nav>
      <div class="title">
        <i class="fa-solid fa-feather-pointed"></i>
        Dear<span>Diary</span>
      </div>
      <ul>
        <li>About</li>
        <li>Features</li>
        <li>Blog</li>
        <li>Reviews</li>
        <li>Support</li>
        <li><%= link_to "Sign up", new_user_registration_path, class: "sign-up" %></li>
      </ul>
    </nav>
  </header>
  <main>
    <div class="img">
      <%= image_tag "write.png" %>
    </div>
    <div class="form">
    <p id="alert"><%= alert %></p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "label"%>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>
  </main>
</div>
