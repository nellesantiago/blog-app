<div class="sign-up">
  <header>
    <nav>
      <div class="title">
        <i class="fa-solid fa-feather-pointed"></i>
        Dear<span>Diary</span>
      </div>
      <ul>
        <li>About</li>
        <li>Features</li>
        <li>Blog</li>
        <li>Reviews</li>
        <li>Support</li>
        <li> <%= link_to "Log in", new_user_session_path, class: "log-in" %></li>
      </ul>
    </nav>
  </header>
  <main>
    <div class="img">
      <%= image_tag "write.png" %>
    </div>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autocomplete: "email" %>
        </div>
        <div class="field">
          <% if @minimum_password_length %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
          <% end %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </main>
</div>
